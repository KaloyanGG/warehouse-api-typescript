    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Nodemon",
            "port": 9229,
            "address": "127.0.0.1",
            "restart": true,
            "protocol": "inspector",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}"
          },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\index.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}